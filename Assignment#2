    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        Thread thread1; 
        thread1 = new Thread(new Runnable(){
        @Override
        public void run(){  
           
            try
            {
                
                jTextArea1.append("Thread[1] : Page[1] Start! \n");
                jTextArea1.append("Thread[1] : Getpage url = "+jTextField1.getText()+"\n");
                jEditorPane1.setPage(jTextField1.getText());
                     
                //HTTP response header      
                try {
                    
                    URL obj = new URL(jTextField1.getText());
                    URLConnection conn = obj.openConnection();
                    Map<String, List<String>> map = conn.getHeaderFields();
 
                    jTextArea1.append("- - - - - - - - - - - - - - - \nThread[1] Response Header\n");
                    for (Map.Entry<String, List<String>> entry : map.entrySet()) {
                        jTextArea1.append("Thread[1] : " + entry.getKey() 
                           + " : " + entry.getValue()+"\n");
                    }
 
                jTextArea1.append("Get Response Header By Thread[1] ...\n");
                String server = conn.getHeaderField("Server");
 
                if (server == null) {
                    jTextArea1.append("Thread[1] 'Server' is not found!\n");
                } else {
		jTextArea1.append("Server - " + server+"\n");
                }
 
                jTextArea1.append("Done\n");
 
                } catch (Exception e) {
                    e.printStackTrace();
                }
                // end print header
                
                
                jTextArea1.append("Thread[1] : Showed page \n");  
                jTextArea1.append("Thread[1] : Finished \n");
           }
                catch(Exception e){
                    jEditorPane1.setText("Error: " +e);
                }
      } 
   });
        thread1.start(); 
        
        // Thread 2
       Thread thread2; 
        thread2 = new Thread(new Runnable(){
        @Override
        public void run(){
           
            try
            {
                
                jTextArea1.append("Thread[2] : Page[2] Start! \n");
                jTextArea1.append("Thread[2] : Getpage url = "+jTextField2.getText()+"\n");
                jEditorPane2.setPage(jTextField2.getText());
                     
                //HTTP response header      
                try {
                    URL obj = new URL(jTextField2.getText());
                    URLConnection conn = obj.openConnection();
                    Map<String, List<String>> map = conn.getHeaderFields();
 
                    jTextArea1.append("- - - - - - - - - - - - - - -\nThread[2] : Response Header\n");
 
                    for (Map.Entry<String, List<String>> entry : map.entrySet()) {
                        jTextArea1.append("Thread[2] : " + entry.getKey() 
                           + " : " + entry.getValue()+"\n");
                    }
 
                jTextArea1.append("Get Response Header By Thread[2] ...\n");
                String server = conn.getHeaderField("Server");
 
                if (server == null) {
                    jTextArea1.append("Thread[2] 'Server' is not found!\n");
                } else {
		jTextArea1.append("Server - " + server+"\n");
                }
 
                jTextArea1.append("Done\n");
 
                } catch (Exception e) {
                    e.printStackTrace();
                }
                // end print header
                
                jTextArea1.append("Thread[2] : Showed page \n");  
                jTextArea1.append("Thread[2] : Finished \n");
           }
                catch(Exception e){
                    jEditorPane2.setText("Error: " +e);
                }
      } 
   });
        thread2.start(); 
    }                                        

